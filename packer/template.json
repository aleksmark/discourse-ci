{
    "builders":
    [
        {
            "name": "kvm-ubuntu",
            "type": "qemu",
            "format": "qcow2",
            "accelerator": "kvm",
            "disk_size": "30000",
            "iso_url": "http://releases.ubuntu.com/xenial/ubuntu-16.04.4-server-amd64.iso",
            "iso_checksum": "6a7f31eb125a0b2908cf2333d7777c82",
            "iso_checksum_type": "md5",
            "qemuargs": [
                [ "-vga", "std" ],
                [ "-nographic", "" ]
            ],
            "http_directory": "http",
            "headless": true,
            "net_device": "virtio-net-pci",
            "machine_type": "q35",
            "ssh_username": "packer",
            "ssh_password": "packer",
            "ssh_wait_timeout": "10m",
            "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait>",
                "<f6><esc>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",
                "/install/vmlinuz ",
                "initrd=/install/initrd.gz ",
                "auto-install/enable=true ",
                "debconf/priority=critical ",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo packer | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/postinstall.sh"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "../ansible/playbook/provision.yml"
        },
        {
            "type": "shell",
            "execute_command": "echo packer | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": "scripts/cleanup.sh"
        }
    ]
}
